<% if user_signed_in? %>

<div class="row">
  <h3>Dashboard</h3>
</div>
<div class="row">
  <div class="span3">
    <h1 class="faDashboardDigits">45</h1>
    <h4 align="center">New Contacts</h4>
  </div>
  <div class="span3">
    <h1 class="faDashboardDigits">218</h1>
    <h4 align="center">Active Reminders</h4>
  </div>
  <div class="span3">
    <h1 class="faDashboardDigits">82</h1>
    <h4 align="center">Campaigns</h4>
  </div>
  <div class="span3">
    <h1 class="faDashboardDigits">24</h1>
    <h4 align="center">Inactive Contacts</h4>
  </div>
</div>
<div class="row">
  <div class="span3" align="center">
    <%= link_to 'Add Contact', new_contact_path, class: 'btn btn-info' %>
  </div>
  <div class="span3" align="center">
    <a href="#" class="btn btn-info">Create Reminder</a>
  </div>
  <div class="span3" align="center">
    <a href="#" class="btn btn-info">Start Campaign</a>
  </div>
  <div class="span3" align="center">
    <a href="#" class="btn btn-info">Re-engage Contact</a>
  </div>
</div>
<div class="row faTablePadding">
  <h3>Top Ten Contacts Based On Interactions</h3>
  <table class="table">
    <thead>
      <tr>
        <th>Contact First Name</th>
        <th>Contact Last Name</th>
        <th>Contact Email</th>
        <th>Contact Mobile</th>
        <th>Contact Phone</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @contacts.each do |contact| %>
        <tr>
          <td><%= contact.first_name %></td>
          <td><%= contact.last_name %></td>
          <td><%= contact.email %></td>
          <td><%= contact.mobile %></td>
          <td><%= contact.phone %></td>
          <td><%= link_to 'Show', contact %></td>
          <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
          <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="row faTablePadding">
  <h3>Most Recent Reminders</h3>
  <table class="table">
    <thead>
      <tr>
        <th>Contact First Name</th>
        <th>Contact Last Name</th>
        <th>Contact Email</th>
        <th>Contact Mobile</th>
        <th>Contact Phone</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @contacts.each do |contact| %>
        <tr>
          <td><%= contact.first_name %></td>
          <td><%= contact.last_name %></td>
          <td><%= contact.email %></td>
          <td><%= contact.mobile %></td>
          <td><%= contact.phone %></td>
          <td><%= link_to 'Send A Message', contact.email, class: 'btn btn-success' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<% else %>

<div class="hero-unit">
  <h1>Simple, powerful relationship management.</h1>
  <p class="lead">Connect your contacts and build stronger relationships.</p>
  <p><%= link_to "Get Started", login_path, class: 'btn btn-large btn-success' %></p>
</div>

<% end %>
